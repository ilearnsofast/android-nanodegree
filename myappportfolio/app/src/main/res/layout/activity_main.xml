<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paul.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:id="@+id/text_intro"/>
    <Button
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:layout_below="@id/text_intro"
        android:id="@+id/button_spotify"
        android:onClick="sendMessage"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F08C35"

        />
    <Button
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:text="Scores APP"
        android:layout_below="@id/button_spotify"
        android:id="@+id/button_scores"
        android:onClick="sendMessage"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F08C35"
        />
    <Button
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:text="Library APP"
        android:layout_below="@id/button_scores"
        android:id="@+id/button_library"
        android:onClick="sendMessage"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F08C35"
        />
    <Button
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:text="build it bigger"
        android:layout_below="@id/button_library"
        android:id="@+id/button_build"
        android:onClick="sendMessage"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F08C35"/>
    <Button
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:layout_below="@id/button_build"
        android:id="@+id/button_xyz"
        android:onClick="sendMessage"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F08C35"
        />
    <Button
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:text="capstone: my own app"
        android:layout_below="@id/button_xyz"
        android:id="@+id/button_capstone"
        android:onClick="sendMessage"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />
</RelativeLayout>
